*
  box-sizing border-box

body
  margin 0
  font-family 'Roboto', sans-serif

h1
h4
  font-weight 400



.container
  position relative
  width 100%
  max-width 1170px
  margin 50px auto
  padding 0 20px
  box-sizing border-box
  &:after
    content ""
    display table
    clear both

.half
  width 49%
  float left
  margin-right 2%
  &:nth-child(2n)
    margin-right 0
h1
  text-align center
  margin-bottom 50px


// Forms
input
  &[type="email"]
  &[type="number"]
  &[type="search"]
  &[type="text"]
  &[type="tel"]
  &[type="url"]
  &[type="password"]
    border 1px solid #888
    padding 10px
    appearance none
    width 100%
    border-radius 4px
    font-size 16px


input
  &[type="email"]:focus
  &[type="number"]:focus
  &[type="search"]:focus
  &[type="text"]:focus
  &[type="tel"]:focus
  &[type="url"]:focus
  &[type="password"]:focus
    border 1px solid #009688
    outline 0
    width 100%

    &.ng-invalid.ng-dirty
      border 1px solid #ef5350

label
  margin-bottom 5px
  display block

.error-block
  width 100%
  float: left
  span
    width 100%
    float left
    padding 4px 0;
    color #ef5350

.submit
  position absolute
  bottom -23px
  left 50%
  display inline-block
  transform translateX(-50%)

  input[type="submit"]
    background #fff
    padding 10px 30px
    font-size 18px
    text-transform uppercase
    border 1px solid #666
    color #666

    &:disabled
      cursor not-allowed
      border 1px solid #ef5350

.block
  width 96%
  float left
  margin 0 2%
  border-radius 4px
  position relative
  padding 20px 20px 40px 20px
  border 1px solid #666
  .title
    position absolute
    background #fff
    font-size 20px
    left 50px
    top -13px
    padding 0 20px
